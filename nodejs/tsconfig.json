{
    "compileOnSave": false,
    "compilerOptions": {
        "pretty": true,
        "strict": false,
        "sourceMap": true,
        "declaration": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "moduleResolution": "node",
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom",
            "esnext"
        ]
    },
    "exclude": [
        "node_modules",
        "src/__tests__/**"
    ]
}
